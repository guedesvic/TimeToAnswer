<div class="row">

  <div class="col-lg-12">
    <h1 class="page-header"> <%= action_message %> </h1>
  </div>

</div>

<hr class="sidebar-divider">

<% if @question.errors.any? %>
  <div class="alert alert-danger alert-dismissable col-lg-6">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true"></button>
    <ul>
      <% @question.errors.full_messages.each do |message| %>
        <li> <%= message %> </li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="form-row">
  <div class="col-lg-6">
    <div class="card">
      <div class="card-header">
        <%= @question.model_name.human %> 
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col-lg-12">

            <%= form_with(model: [ :admins_backoffice, @question ], local: true) do |form| %>
              <div class="form-group">
                <%= form.label :description %>
                <%= form.hidden_field :description, class:"form-control" %>
                <trix-editor input="question_description"></trix-editor>
              </div>
              <div class="form-group">
                <%= form.label :subject_id %>
                <%= form.collection_select(:subject_id, @subjects, :id, :description, {}, {class:"form-control"}) %>
              </div>
              <div id='answers'>
                <%= form.fields_for :answers do |answer| %>
                  <%= render partial: "answer_fields", locals: { f: answer } %>
                <% end %>

                <%= link_to_add_association('[Adicionar Resposta]', form, :answers) %>
              </div>
              </br>
              <button type="submit" class="btn btn-primary"><%= t('buttons.save') %></button>
            <% end %>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>