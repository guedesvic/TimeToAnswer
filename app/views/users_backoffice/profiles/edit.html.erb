<div class="card-title">
  <h5 class="page-header"> <%= @user.model_name.human %>  </h5>
</div>

<% if @user.errors.any? %>
  <div class="alert alert-danger alert-dismissable col-lg-6">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true"></button>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li> <%= message %> </li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="form-row">
  <div class="col-sm-6">
    <div class="card">
      <div class="card-header">
        Informações
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col-lg-12">
            <%= form_with(url: users_backoffice_profiles_path, model: @user, local: true) do |form| %>
              <div class="form-group">
                <%= form.label :first_name %>
                <%= form.text_field :first_name, class:"form-control" %>
              </div>

              <div class="form-group">
                <%= form.label :last_name %>
                <%= form.text_field :last_name, class:"form-control" %>
              </div>
              
              <div class="form-group">
                <%= form.label :email %>
                <%= form.email_field :email, class:"form-control", readonly: true %>
              </div>

              <%= form.fields_for :user_profile do |profile_form| %>
                <div class="form-group">
                  <%= profile_form.label :zip_code %>
                  <div class="input-group">
                    <%= profile_form.text_field :zip_code, class:"form-control" %>
                    <span class="input-group-btn">
                      <%= link_to 'Buscar', users_backoffice_zip_code_path, remote:true, class:"btn btn-primary", id:"zip-code-link" %>
                    </span>
                  </div>
                </div>

                <script>
                  let zip_code_input = document.getElementById("user_user_profile_attributes_zip_code");
                  var zip_code_link = document.getElementById("zip-code-link");

                  zip_code_input.addEventListener("change", function() {
                    zip_code_link.href = "<%= users_backoffice_zip_code_path %>/?zip_code="+zip_code_input.value;
                  });

                </script>

                <div class="form-group">
                  <%= profile_form.label :address %>
                  <%= profile_form.text_field :address, class:"form-control" %>
                </div>

                <div class="form-group">
                  <%= profile_form.label :gender %>
                  <div>
                    <div id="gender" class="btn-group" data-toggle="buttons">
                      <label class="btn <%= gender_select(@user, 'M') %>" data-toggle-class="btn-primary" data-toggle-passive-class="btn-light">
                        <%= profile_form.radio_button :gender, "M", "data-parsley-multiple":"gender"%> &nbsp; Masculino &nbsp;
                      </label>
                      <label class="btn <%= gender_select(@user, 'F') %>" data-toggle-class="btn-primary" data-toggle-passive-class="btn-light">
                        <%= profile_form.radio_button :gender, "F", "data-parsley-multiple":"gender"%> &nbsp; Feminino &nbsp;
                      </label>
                    </div>
                  </div>
                </div>

                <%= javascript_tag do %>
                  var labels = document.querySelectorAll('div#gender label');

                  labels.forEach((label) => {
                    label.addEventListener('click', () => {
                      label.classList.remove('btn-light');
                      label.classList.add('btn-primary');

                      labels.forEach((lbl) => {
                        if(lbl !== label){
                          lbl.classList.remove('btn-primary');
                          lbl.classList.add('btn-light');
                        };
                      });
                    });
                  });
                <% end %>

                <div class="form-group">
                  <%= profile_form.label :birthdate %>
                  <%= profile_form.date_field :birthdate , class:"form-control"  %>
                </div>
              <% end %>

              <div class="form-group">
                <%= form.label :password %>
                <%= form.password_field :password, class:"form-control" %>
              </div>

              <div class="form-group">
                <%= form.label :password_confirmation %>
                <%= form.password_field :password_confirmation, class:"form-control" %>
              </div>

              <button type="submit" class="btn btn-primary"><%= t('buttons.save') %></button>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>