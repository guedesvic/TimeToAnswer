<div class="row justify-content-center">

  <div class="col-xl-10 col-lg-12 col-md-9">

    <div class="card o-hidden border-0 shadow-lg my-5">
      <div class="card-body p-0">
        <div class="row">
          <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
          <div class="col-lg-6">
            <div class="p-5">
              <div class="text-center">
                  <h1 class="h4 text-gray-900 mb-4">Seja Bem-vindo!</h1>
              </div>
              <%= form_for(resource, as: resource_name, url: session_path(resource_name), class:"user") do |f| %>
                <div class="form-group">
                  <%= f.email_field :email, autofocus: true, placeholder:"Enter Email...", class:"form-control form-control-user", id:"exampleInputEmail" %>
                </div>

                <div class="form-group">
                  <%= f.password_field :password, placeholder:"Password", class:"form-control form-control-user", id:"exampleInputPassword" %>
                </div>

                <% if devise_mapping.rememberable? %>
                  <div class="form-group">
                    <div class="custom-control custom-checkbox small">
                      <label class="custom-control-label" for="customCheck">
                        <%= f.check_box :remember_me, class:"custom-control-input", id:"customCheck" %> <%= t('messages.remember_me') %>
                      </label>
                    </div>
                  </div>
                <% end %>

                <%= f.submit "Log in", class:"btn btn-primary btn-user btn-block" %>

                <hr>

                <a href="index.html" class="btn btn-google btn-user btn-block">
                  <i class="fab fa-google fa-fw"></i> <%= t('messages.login_google') %>
                </a>

                <a href="index.html" class="btn btn-facebook btn-user btn-block">
                  <i class="fab fa-facebook-f fa-fw"></i> <%= t('messages.login_facebook') %>
                </a>
              <% end %>
              <hr>
              <div class="text-center">
                <%= link_to t('links.forgot_password'), new_user_password_path, class:"small" %>
              </div>
              <div class="text-center">
                <%= link_to t('links.new_user'), new_user_registration_path, class:"small" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

  </div>

</div>

